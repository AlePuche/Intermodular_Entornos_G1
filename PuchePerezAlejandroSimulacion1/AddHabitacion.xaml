<Window x:Class="PuchePerezAlejandroSimulacion1.AddHabitacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuchePerezAlejandroSimulacion1"
        mc:Ignorable="d"
        Title="AddHabitacion" Height="969" Width="1440">
    <Grid>
        <Border Height="691" Width="1297" Background="WhiteSmoke" CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Añadir habitación" Foreground="#278498" FontSize="50" FontFamily="Monstserrat" FontWeight="Bold" Margin="50,30,0,0"/>
                    <Border Grid.Column="1" CornerRadius="80" BorderThickness="3" Background="Black" Height="70" VerticalAlignment="Center" Margin="0,10,10,0">
                        <Button Width="60" Background="Transparent" HorizontalAlignment="Center" BorderBrush="Transparent" Foreground="White" FontStyle="Italic"  FontSize="30" Content="X" />
                    </Border>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.6*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                       <TextBlock  Text="Nombre" FontSize="20" FontWeight="Bold" FontFamily="Montserrat" Margin="50,00,0,0"/>
                       <TextBox Height="40" Margin="50,0,50,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Huéspedes" FontSize="20" FontWeight="Bold" FontFamily="Montserrat" Margin="50,0,0,0"/>
                        <ComboBox Height="40" Margin="50,0,50,0">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Row="2" Margin="50,0,50,0">
                    <TextBlock  Text="Descripción" FontSize="20" FontWeight="Bold" FontFamily="Montserrat"/>
                    <TextBox Height="200"/>
                </StackPanel>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="50,0,50,0">
                        <TextBlock Text="Seleccionar imagen principal" FontSize="20" FontWeight="Bold" FontFamily="Montserrat"/>
                        <Button Content="Seleccionar Archivo" Height="40" Width="300" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="50,0,50,0">
                        <TextBlock Text="Opciones" FontSize="20" FontWeight="Bold" FontFamily="Montserrat"/>
                        <StackPanel Orientation="Horizontal" Margin="0,20">
                            <CheckBox Content="Cuna"/>
                            <CheckBox Content="Cama extra" Margin="20,0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="50,0,50,0">
                        <TextBlock  Text="Precio por noche" FontSize="20" FontWeight="Bold" FontFamily="Montserrat" />
                        <TextBox Height="40"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" CornerRadius="30" BorderThickness="2" BorderBrush="#278498" Background="#278498" Width="150" Height="50" Margin="0,0,20,20">
                        <Button Content="Buscar" Foreground="White" BorderBrush="Transparent" Background="Transparent" FontSize="20"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
