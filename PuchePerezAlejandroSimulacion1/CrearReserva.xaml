<Window x:Class="PuchePerezAlejandroSimulacion1.CrearReserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuchePerezAlejandroSimulacion1"
        mc:Ignorable="d"
        Title="CrearReserva" Height="969" Width="1440">
    <Grid>
        <Border Height="691" Width="1297" Background="WhiteSmoke" CornerRadius="20">
            <StackPanel Margin="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Crear Reserva" Foreground="#278498" FontSize="50" FontFamily="Monstserrat" FontWeight="Bold" VerticalAlignment="Center" />

                    <Border Grid.Column="1" CornerRadius="80" BorderThickness="3" Background="Black" Height="70" VerticalAlignment="Center">
                        <Button Width="60" Background="Transparent" HorizontalAlignment="Center" BorderBrush="Transparent" Foreground="White" FontStyle="Italic"  FontSize="30" Content="X" />
                    </Border>
                </Grid>
                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="305*"/>
                        <ColumnDefinition Width="892*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <Image Source="Images\habitacion.png"/>
                        <TextBlock Text="Habitación Londres" FontSize="34" Margin="0,10,0,0" FontFamily="Monstserrat" FontWeight="DemiBold" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid Grid.Column="1" Margin="70,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Fecha entrada" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                            <TextBlock Text="20/04/2023" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat" Foreground="Gray" Margin="0,20,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Fecha entrada" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                            <TextBlock Text="23/04/2023" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat" Foreground="Gray" Margin="0,20,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Huespedes" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                            <TextBlock Text="6" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat" Foreground="Gray" Margin="0,20,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
                            <TextBlock Text="Precio" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                            <TextBlock Text="205,95 €" FontSize="50" FontWeight="DemiBold" FontFamily="Montserrat" Foreground="#278498" Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                            <TextBlock Text="Cliente" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                            <ComboBox Height="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.ColumnSpan="3">
                            <TextBlock Text="Iván Nieto  -    ivan@peremaria.com" FontSize="20" FontWeight="Light" FontFamily="Montserrat" Foreground="Gray" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="20" BorderThickness="3" Background="#278498" Height="48" Grid.Column="1" Margin="0,10,0,0">
                        <Button Width="169" Background="Transparent" HorizontalAlignment="Left" BorderBrush="Transparent" Content="Crear reserva" FontSize="20" Foreground="White"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
