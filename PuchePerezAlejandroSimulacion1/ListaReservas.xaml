<Window x:Class="PuchePerezAlejandroSimulacion1.ListaReservas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuchePerezAlejandroSimulacion1"
        mc:Ignorable="d"
        Title="ListaReservas" Height="1018" Width="1440">
    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Image HorizontalAlignment="Left" Width="300" Source="/Images/hotelperemaria_horizontal.png" Margin="50,0"/>
        <TextBlock Grid.Row="1" Text="Buscador" FontFamily="Montserrat" FontWeight="Bold" Foreground="#278498" FontSize="60" Margin="50,0"/>
        <Border Grid.Row="2" CornerRadius="20" Background="WhiteSmoke" Margin="50,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="47*"/>
                    <RowDefinition Height="49*"/>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="51*"/>
                    <RowDefinition Height="37*"/>
                    <RowDefinition Height="149*"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="20,20,50,8">
                    <TextBlock  Text="ID" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                    <TextBox Height="40"/>
                </StackPanel>

                <StackPanel Margin="20,20,50,1" Grid.Row="1">
                    <TextBlock  Text="Huésped" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                    <ComboBox Height="40">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="20,20,50,3" Grid.Row="2">
                    <TextBlock  Text="Empleado" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                    <ComboBox Height="40">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="20,20,50,3" Grid.Row="3">
                    <TextBlock  Text="Rol" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                    <ComboBox Height="40">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="20,0,50,127" Grid.RowSpan="2">
                    <TextBlock Text="VIP" FontSize="20" FontWeight="DemiBold" FontFamily="Montserrat"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <RadioButton Content="Si"/>
                        <RadioButton Content="No" Margin="20,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="5">
                    <Border CornerRadius="30" BorderThickness="2" BorderBrush="#278498"  Background="#278498" Width="150" Height="50" Margin="0,50,0,20">
                        <Button Content="Buscar" BorderBrush="Transparent" Background="Transparent" Foreground="White" FontSize="20"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Reservas" FontFamily="Montserrat" FontWeight="Bold" Foreground="Black" FontSize="60" Margin="50,0"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/campana.png" Width="25" Margin="0,10,40,0"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Content="Buscador" Style="{StaticResource CustomButtonStyle}" Grid.Column="0" />
                <Button Content="Usuarios" Style="{StaticResource CustomButtonStyle}" Grid.Column="1" />
                <Button Content="Reservas" Style="{StaticResource CustomButtonStyle}" Grid.Column="2" />
                <Button Content="Habitaciones" Style="{StaticResource CustomButtonStyle}" Grid.Column="3" />
            </Grid>

        </Grid>
    </Grid>
</Window>
