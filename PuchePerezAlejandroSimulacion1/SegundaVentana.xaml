<Window x:Class="PuchePerezAlejandroSimulacion1.SegundaVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuchePerezAlejandroSimulacion1"
        mc:Ignorable="d"
        Title="SegundaVentana" Height="1018" Width="1440">
    <Grid>
        <Canvas>
            <StackPanel  Width="1400" Orientation="Horizontal" Canvas.Top="10" Canvas.Left="30">
                <Image Width="300" Source="/Images/hotelperemaria_horizontal.png"/>
                <TextBlock VerticalAlignment="Center" Text="   |" FontSize="25" FontWeight="Medium" FontFamily="Montserrat" Foreground="Black"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock VerticalAlignment="Bottom" Text="Bienvenido" FontSize="15" FontWeight="Medium" FontFamily="Montserrat" Foreground="Black" Margin="10,0,0,0"/>
                    <TextBlock VerticalAlignment="Top" Text="Cerrar sesión" FontSize="15" FontWeight="Medium" FontFamily="Montserrat" Foreground="LightGray" Margin="10,0,0,0"/>
                </StackPanel>
                <Canvas>
                    <StackPanel Canvas.Left="860">
                        <Border CornerRadius="20" BorderThickness="3" Background="#278498" DockPanel.Dock="Right" Height="40">
                            <Button Width="120" Background="Transparent" HorizontalAlignment="Left" BorderBrush="Transparent" Foreground="White" Content="Añadir reserva"/>
                        </Border>
                    </StackPanel>
                </Canvas>
            </StackPanel>
            <StackPanel Canvas.Top="70">
                <TextBlock Text="Buscador:" VerticalAlignment="Bottom" FontSize="50" Foreground="#278498" FontWeight="Bold"  FontFamily="Montserrat" Margin="30,0,0,0"/>
            </StackPanel>
            <Border Canvas.Top="150" Canvas.Left="50" CornerRadius="20" BorderThickness="3" Background="WhiteSmoke" DockPanel.Dock="Right" Height="130" Width="1300">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Numero de huéspedes:" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <ComboBox>
                                <ComboBoxItem Content="2"></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Fecha de entrada:" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <DatePicker Height="40"/>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Fecha de salida:" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <DatePicker Height="40"/>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="¿Miembro VIP?" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <RadioButton Content="Si" Margin="0,0,20,0"></RadioButton>
                                <RadioButton Content="No"></RadioButton>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Extras" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <CheckBox Content="Cuna" Margin="0,0,20,0"></CheckBox>
                                <CheckBox Content="Cama Extra"></CheckBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Precio Noche" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" FontFamily="Montserrat" Margin="30,0,0,0"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Slider Width="300" Ticks="1000"></Slider>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <Border CornerRadius="20" BorderThickness="1" Background="Transparent" DockPanel.Dock="Right" Height="40" BorderBrush="#278498">
                                <Button Width="120" Background="Transparent" HorizontalAlignment="Left" BorderBrush="Transparent" Content="Ofertas"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <Border CornerRadius="20" BorderThickness="3" Background="#278498" DockPanel.Dock="Right" Height="40">
                                <Button Width="120" Background="Transparent" HorizontalAlignment="Left" BorderBrush="Transparent" Foreground="White" Content="Buscar"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <TextBlock Canvas.Top="300" Canvas.Left="50" Text="Resultados:" Foreground="Black" FontFamily="Montserrat" FontSize="60" FontWeight="Bold"/>
            
            <StackPanel Canvas.Top="400" Canvas.Left="50
            " HorizontalAlignment="Left">
                <Image Source="Images\habitacion.png" Width="280"/>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Habitación doble" FontFamily="Montserrat" FontSize="30" Margin="0,10,0,0"/>

                    <TextBlock Text="36€ / noche" FontFamily="Montserrat" FontSize="20" Foreground="#278498" Margin="70,10,0,0"/>

                    <Button Background="#278498" BorderThickness="0" Margin="0,10,0,0" Height="50" Width="240">
                        <TextBlock Text="Reservar habitación" Foreground="White" FontSize="20"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
